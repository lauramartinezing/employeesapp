
@model EmployeesViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="wrapper wrapper-content">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            @Html.LabelFor(model => model.id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.id)
                            </div>
                            <div class="col-md-6">
                                <input type="submit" value="Search" class="btn btn-primary" />

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>List of Employees</h5>

                    </div>
                    <div class="ibox-content">

                        <table class="table table-striped tecstable">
                            <tbody>
                                @foreach (var item in Model.employeesList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.roleName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.contractTypeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.hourlySalary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.monthlySalary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.annualSalary)
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
